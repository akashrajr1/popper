#!/bin/bash
set -ex
# shellcheck source=./ci/test/common
source ./common
init_test_repo
cd "$test_repo_path"

PY_VERSION=$( (python --version) 2>&1)

if [[ $PY_VERSION != *"Python 2.7"* ]]; then


cat <<EOF > main.workflow
workflow "test" {
  resolves = ["ls cmds", "curl urls"]
}

action "ls al" {
  uses = "docker://busybox"
  args = ["ls", "-al"]
}

action "ls ltr" {
  uses = "docker://busybox"
  args = ["ls", "-ltr"]
}

action "ls line count" {
  uses = "docker://busybox"
  args = ["sh", "-c", "ls | wc -l"]
}

action "ls d" {
  uses = "docker://busybox"
  args = ["ls", "-d"]
}

action "ls r" {
  uses = "docker://busybox"
  args = ["ls", "-r"]
}

action "ls R" {
  uses = "docker://busybox"
  args = ["ls", "-R"]
}

action "ls s" {
  uses = "docker://busybox"
  args = ["ls", "-s"]
}

action "ls t" {
  uses = "docker://busybox"
  args = ["ls", "-t"]
}

action "ls S" {
  uses = "docker://busybox"
  args = ["ls", "-S"]
}

action "ls X" {
    uses = "docker://busybox"
    args = ["ls", "-X"]
}

action "ls cmds" {
  uses = "docker://busybox"
  needs = [
    "ls al",
    "ls ltr",
    "ls line count",
    "ls d",
    "ls r",
    "ls R",
    "ls s",
    "ls t",
    "ls S",
    "ls X"
  ]
}


action "curl github" {
  uses = "actions/bin/curl@master"
  args = ["-L", "github.com"]
}

action "curl google" {
  uses = "actions/bin/curl@master"
  args = ["-L", "google.com"]
}

action "curl facebook" {
  uses = "actions/bin/curl@master"
  args = ["-L", "facebook.com"]
}

action "curl gitlab" {
  uses = "actions/bin/curl@master"
  args = ["-L", "gitlab.com"]
}

action "curl bitbucket" {
  uses = "actions/bin/curl@master"
  args = ["-L", "bitbucket.org"]
}

action "curl medium" {
  uses = "actions/bin/curl@master"
  args = ["-L", "medium.com"]
}

action "curl twitter" {
  uses = "actions/bin/curl@master"
  args = ["-L", "twitter.com"]
}

action "curl youtube" {
  uses = "actions/bin/curl@master"
  args = ["-L", "youtube.com"]
}

action "curl do" {
  uses = "actions/bin/curl@master"
  args = ["-L", "digitalocean.com"]
}

action "curl urls" {
    uses = "actions/bin/curl@master"
    args = ["-L", "devfolio.co"]
    needs = [
        "curl google",
        "curl facebook",
        "curl gitlab",
        "curl bitbucket",
        "curl medium",
        "curl youtube",
        "curl do",
        "curl twitter",
        "curl github"
    ]
}
EOF

popper run --parallel |& tee out
counter="$(grep -c 'Action ran successfully !' out)"
test "$counter" -eq 21

cat <<EOF > main.workflow
workflow "test" {
  resolves = ["ls cmds", "curl urls"]
}

action "ls al" {
  uses = "docker://busybox"
  args = ["ls", "-al"]
}

action "ls ltr" {
  uses = "docker://busybox"
  args = ["ls", "-ltr"]
}

action "ls line count" {
  uses = "docker://busybox"
  args = ["sh", "-c", "ls | wc -l"]
}

action "ls d" {
  uses = "docker://busybox"
  args = ["ls", "-dhdd"]
}

action "ls r" {
  uses = "docker://busybox"
  args = ["ls", "-tyygfsr"]
}

action "ls R" {
  uses = "docker://busybox"
  args = ["ls", "-R"]
}

action "ls s" {
  uses = "docker://busybox"
  args = ["ls", "-s"]
}

action "ls t" {
  uses = "docker://busybox"
  args = ["ls", "-gdtdt"]
}

action "ls S" {
  uses = "docker://busybox"
  args = ["ls", "-S"]
}

action "ls X" {
    uses = "docker://busybox"
    args = ["ls", "-X"]
}

action "ls cmds" {
  uses = "docker://busybox"
  needs = [
    "ls al",
    "ls ltr",
    "ls line count",
    "ls d",
    "ls r",
    "ls R",
    "ls s",
    "ls t",
    "ls S",
    "ls X"
  ]
}


action "curl github" {
  uses = "actions/bin/curl@master"
  args = ["-L", "git77hub.com"]
}

action "curl google" {
  uses = "actions/bin/curl@master"
  args = ["-L", "google.com"]
}

action "curl facebook" {
  uses = "actions/bin/curl@master"
  args = ["-L", "facebook.com"]
}

action "curl gitlab" {
  uses = "actions/bin/curl@master"
  args = ["-L", "gitlab.com"]
}

action "curl bitbucket" {
  uses = "actions/bin/curl@master"
  args = ["-L", "bitbucket.org"]
}

action "curl medium" {
  uses = "actions/bin/curl@master"
  args = ["-L", "medyu67dfium.com"]
}

action "curl twitter" {
  uses = "actions/bin/curl@master"
  args = ["-L", "twitter.com"]
}

action "curl youtube" {
  uses = "actions/bin/curl@master"
  args = ["-L", "youtube.com"]
}

action "curl do" {
  uses = "actions/bin/curl@master"
  args = ["-L", "digitalocean.com"]
}

action "curl urls" {
    uses = "actions/bin/curl@master"
    args = ["-L", "devfolio.co"]
    needs = [
        "curl google",
        "curl facebook",
        "curl gitlab",
        "curl bitbucket",
        "curl medium",
        "curl youtube",
        "curl do",
        "curl twitter",
        "curl github"
    ]
}
EOF

! popper run --parallel
echo "Some actions failed as expected !"

fi